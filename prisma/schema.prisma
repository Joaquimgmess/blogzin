generator client {
  provider      = "prisma-client"
  output        = "../app/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  previewFeatures = ["driverAdapters"]
  moduleFormat  = "esm"
  engineType    = "library"
}

datasource db {
  provider = "sqlite"
}

model Post {
  id           String   @id @default(cuid())
  title        String
  content      String
  originalText String   @unique
  source       String
  createdAt    DateTime @default(now())
}
